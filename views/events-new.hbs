<!-- views/events-new.hbs -->

<form method="POST" action="/events">
    <div class="form-group">
      <label for="title">Title</label>
        <input name="title" class="form-control" placeholder="Quick, describe your event!" value="{{event.title}}" />
    </div>
    <div class="form-group">
      <label for="imgUrl">Image Url</label>
      <input name="imgUrl" class="form-control" placeholder="URL to your event image." value="{{event.imgUrl}}"/>
    </div>
    <div class="form-group">
      <label for="desc">Description</label>
      <textarea name="desc" class="form-control" placeholder="A description of your event.">{{event.desc}}</textarea>
    </div>
    <div class="form-group">
      <label for="date">Event Date</label><br>
      <input name="date" type="date">
    </div>
  <!-- BUTTON -->
  <p>
    <button class="btn btn-success" type="submit">Save Event</button>
  </p>

</form>
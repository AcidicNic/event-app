<!-- views/events-edit.hbs -->
<div class="row mt-4">
  <div class="col-lg-6 offset-lg-3">
    <div class="card">
      <div class="card-body">
        <div class="card-title">
          <h3>Update Event</h3>
        </div>
        <div class="card-text">
          <form action="/events/{{event.dataValues.id}}?_method=PUT" id="update" method="post">
            <div class="form-group">
              <label for="title">Title</label>
                <input name="title" class="form-control" placeholder="Quick, describe your event!" value="{{event.dataValues.title}}" />
            </div>
            <div class="form-group">
              <label for="imgUrl">Image Url</label>
              <input name="imgUrl" class="form-control" placeholder="URL to your event image." value="{{event.dataValues.imgUrl}}"/>
            </div>
            <div class="form-group">
              <label for="desc">Description</label>
              <textarea name="desc" class="form-control" placeholder="A description of your event.">{{event.dataValues.desc}}</textarea>
            </div>
          </form>
          <div class="text-right">
            <button type="submit" form="delete" class='btn btn-danger'>Delete</button>
            <a href="/events/{{event.dataValues.id}}" class='btn btn-warning mx-2'>Cancel</a>
            <button type="submit" form="update" class="btn btn-success" name="button">Update</button>
          </div>
          <form action="/events/{{event.dataValues.id}}?_method=DELETE" id="delete" method="post"></form>
        </div>
      </div>
    </div>
  </div>
</div>
